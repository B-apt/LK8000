<?xml version="1.0" encoding="utf-8"?>
<!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <include domain="sharedpref" path="."/>
        <include domain="file" path="_Configuration" />
        <include domain="file" path="_Logger" />
        <include domain="file" path="_Tasks" />
        <include domain="file" path="_Polars" />
        <include domain="file" path="_Waypoints" />

        <exclude domain="file" path="_Configuration/DEMO.prf" />
        <exclude domain="file" path="_Configuration/CAR.prf" />
        <exclude domain="file" path="_Configuration/TREKKING.prf" />
        <exclude domain="file" path="_Logger/DEMO.IGC" />
        <exclude domain="file" path="_Tasks/DEMO.lkt" />
        <exclude domain="file" path="_Polars/Example.plr" />
        <exclude domain="file" path="_Waypoints/DEMO.cup" />

    </cloud-backup>
    <device-transfer>
        <include domain="sharedpref" path="."/>
        <include domain="file" path="." />

        <exclude domain="file" path="_Configuration/DEMO.prf" />
        <exclude domain="file" path="_Configuration/CAR.prf" />
        <exclude domain="file" path="_Configuration/TREKKING.prf" />
        <exclude domain="file" path="_Logger/DEMO.IGC" />
        <exclude domain="file" path="_Tasks/DEMO.lkt" />
        <exclude domain="file" path="_Polars/Example.plr" />
        <exclude domain="file" path="_Waypoints/DEMO.cup" />
        <exclude domain="file" path="_Airspaces/DEMO.txt" />

    </device-transfer>
</data-extraction-rules>
